{% macro input(type, label, name, value, error) %}
    {% set classError = error[name] is not empty ? 'is-invalid' : '' %}

    <div class="mb-3">
        <label class="form-label">{{ label }}</label>
        <input type="{{ type }}" name="{{ name }}" value="{{ value }}" class="form-control {{ classError }}" />
        <div class="invalid-feedback">{{ error[name] }}</div>
    </div>
{% endmacro %}

{% macro input_hidden(name, value) %}
    <input type="hidden" name="{{ name }}" value="{{ value }}" />
{% endmacro %}

{% macro input_file(label, name, error) %}
    {% set classError = error[name] is not empty ? 'is-invalid' : '' %}

    <div class="mb-3">
        <label class="form-label">{{ label }}</label>
        <input type="file" name="{{ name }}" class="form-control {{ classError }}" accept="text/csv" />
        <div class="invalid-feedback">{{ error[name] }}</div>
    </div>
{% endmacro %}


{% macro input_floating(type, name, id, placeholder) %}
<div class="form-floating mb-3">
    <input type="{{ type }}" name="{{ name }}" class="form-control" id="{{ id }}" placeholder="{{ placeholder }}" />
    <label for="{{ id }}">{{ placeholder }}</label>
</div>
{% endmacro %}

