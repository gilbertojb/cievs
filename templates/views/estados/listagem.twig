{% extends "layout/default.twig" %}

{% block content %}

<h1>Listagem de Estados</h1>

<a class="btn btn-primary mt-3 mb-3" href="{{ url_for('estados.import') }}">
    Importar novo arquivo
</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Sigla</th>
            <th scope="col">Total</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        {% for estado in estados %}
        <tr>
            <td scope="col">{{ estado.nome }}</td>
            <td scope="col">{{ estado.sigla }}</td>
            <td scope="col">{{ estado.total }}</td>
            <td scope="col">
            {% if estado.isOk %}
                <i class="bi bi-hand-thumbs-up-fill" style="color: green;"></i>
            {% else %}
                <i class="bi bi-hand-thumbs-down-fill" style="color: red;"></i>
            {% endif %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
