{% extends "layout/default.twig" %}
{% import "macros/form-elements.twig" as form %}

{% block content %}
<div class="container px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 mb-3">Treinamento de PHP</h1>
            <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrapâ€™s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">
            <form class="p-4 p-md-5 border rounded-3 bg-light" method="post" action="{{ url_for('auth.signin') }}">
                {{ csrf.field | raw }}

                {{ form.input_floating('email', 'email', 'floatingInput', 'Informe seu e-mail') }}
                {{ form.input_floating('password', 'password', 'floatingPassword', 'Informe sua senha') }}

                <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
